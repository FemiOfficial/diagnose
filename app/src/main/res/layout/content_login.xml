<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alayesanmifemi.diagnose.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/bach">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INPUT PIN CODE"
            android:textSize="30dp"
            android:layout_marginTop="85dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#fbd6f7"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/text_id"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fbd6f7"
            android:hint="Default PIN: 123456"
            android:password="true"
            android:textAlignment="center" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="#c6ea37"
            android:textAllCaps="false"
            android:text="Sign In" />

        <TextView
            android:id="@+id/text_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Click here to change default PIN"/>


    </LinearLayout>


</RelativeLayout>
